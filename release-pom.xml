<?xml version="1.0"?>
<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd" xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <modelVersion>4.0.0</modelVersion>
  <groupId>winglongitude</groupId>
  <artifactId>winglongitude-lontra</artifactId>
  <version>1.2</version>
  <packaging>pom</packaging>
  <name>WingLongitude Lontra Harvester</name>
  <modules>
    <module>lontra-harvester-lib</module>
    <module>lontra-harvester-ui</module>
    <module>lontra-harvester-node</module>
    <module>lontra-harvester-cli</module>
    <module>dist</module>
  </modules>
  <scm>
    <connection>scm:git:git@github.com:WingLongitude/lontra-harvester.git</connection>
    <developerConnection>scm:git:git@github.com:WingLongitude/lontra-harvester.git</developerConnection>
    <url>scm:git:git@github.com:WingLongitude/lontra-harvester.git</url>
  </scm>
  <issueManagement>
    <system>GitHub</system>
    <url>https://github.com/WingLongitude/lontra-harvester/issues</url>
  </issueManagement>
  <properties>
    <spring.version>4.0.9.RELEASE</spring.version>
    <compiler.source>1.7</compiler.source>
    <compiler.target>1.7</compiler.target>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <project.build.resourceEncoding>UTF-8</project.build.resourceEncoding>
    <maven-resources-plugin.version>2.7</maven-resources-plugin.version>
    <commons-cli.version>1.3.1</commons-cli.version>
    <junit.version>4.11</junit.version>
  </properties>
  <dependencies>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>4.11</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>org.hamcrest</groupId>
      <artifactId>hamcrest-core</artifactId>
      <version>1.3</version>
      <scope>test</scope>
    </dependency>
  </dependencies>
  <repositories>
    <repository>
      <id>gbif-all</id>
      <url>http://repository.gbif.org/content/groups/gbif</url>
    </repository>
    <repository>
      <snapshots>
        <enabled>false</enabled>
      </snapshots>
      <id>central</id>
      <name>Central Repository</name>
      <url>https://repo.maven.apache.org/maven2</url>
    </repository>
  </repositories>
  <pluginRepositories>
    <pluginRepository>
      <releases>
        <updatePolicy>never</updatePolicy>
      </releases>
      <snapshots>
        <enabled>false</enabled>
      </snapshots>
      <id>central</id>
      <name>Central Repository</name>
      <url>https://repo.maven.apache.org/maven2</url>
    </pluginRepository>
  </pluginRepositories>
  <build>
    <sourceDirectory>src/main/java</sourceDirectory>
    <scriptSourceDirectory>/Users/cgendreau/Documents/CodeSource/lontra-harvester/src/main/scripts</scriptSourceDirectory>
    <testSourceDirectory>src/test/java</testSourceDirectory>
    <outputDirectory>target/classes</outputDirectory>
    <testOutputDirectory>target/test-classes</testOutputDirectory>
    <resources>
      <resource>
        <directory>src/main/resources</directory>
      </resource>
    </resources>
    <testResources>
      <testResource>
        <directory>src/test/resources</directory>
      </testResource>
    </testResources>
    <directory>target</directory>
    <finalName>winglongitude-lontra-1.2</finalName>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.2</version>
        <extensions>false</extensions>
        <configuration>
          <source>${compiler.source}</source>
          <target>${compiler.target}</target>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-release-plugin</artifactId>
        <version>2.5.2</version>
        <extensions>false</extensions>
      </plugin>
    </plugins>
  </build>
  <reporting>
    <outputDirectory>target/site</outputDirectory>
  </reporting>
</project>
